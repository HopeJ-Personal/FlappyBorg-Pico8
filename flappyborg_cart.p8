-- game loop --

function _init()
	-- player / borg --
	p={} -- player table
	p.x=56 -- player x cord.
	p.y=56 -- player y cord.
	p.f=0 -- flip state (0 false / 1 true)
	p.g=1 -- gravity (0 false / 1 true)
	p.step=3
	-- game --
	g={} -- game table
	g.scn=0 -- current scene
	-- 1 menu
	-- 2 death
	g.scr=0 -- current score
	g.frz = false -- freeze state
	init_bg()
end

function _update()
	controls()
	phys()
	collission()
end

function _draw()
	cls()
	map()
	spr(1,p.x,p.y)
	print("y: "..p.y, 1, 1)
	scenes()
	draw_bg()
end
