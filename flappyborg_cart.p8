-- player --
function controls()
	if g.frz==false then
		if btn(⬆️) then
			if p.y > 0 then
				p.y-=p.step
			end
		end
	end
end

-- player: interactions --
function phys()
	if g.frz==false then
		if p.g==1 then
				p.y += 1
		end
	end
end

function collission()
	//bottom of screen is 122
	if p.y >= 122 then
		g.frz = true
		g.scn = 2
	end
end

ftimer = 0
function sprite_control()
	if g.frz==false then
		if btn(⬆️) then
			p.spid = p.spid_up
			ftimer = 30
		else
			if ftimer > 1 then
				p.spid = p.spid_str
			elseif ftimer == 1 then
				p.spid = p.spid_dwn
			end
		end
	end
end
